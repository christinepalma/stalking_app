<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>

    <link rel="stylesheet" href="/stylesheets/instagram.css">
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="/javascripts/instagram.js"></script>

  </head>
  <body>

  <header>
    <a href="http://instagram.com/<%= data[0].user.username %>" target="_blank"><img class="profile_img" src="<%= data[0].user.profile_picture.split('_normal').join('') %>"></a>
    <h1 class="header_name name"><%= data[0].user.full_name %></h1>
    <h2 class="header_name screen_name">@<a href="http://instagram.com/<%= data[0].user.username %>" target="_blank"><%= data[0].user.username %></a></h2>
  </header>

  <%
    data.forEach(function(feed){
      var content;
      if(feed.caption){
        content=feed.caption.text;
      }

      %>
        <div class="feed_div">
          <a href="<%=feed.link%>" id="instagram_images" target="_blank"><img class="feed_img" src="<%=feed.images.low_resolution.url%>"></a>
          <p class="feed_content" data-content="<%= content %>"></p>
          <p class="feed_time" data-time="<%= feed.created_time %>"></p>
        </div>
      <%
  }) %>


  </body>
</html>
